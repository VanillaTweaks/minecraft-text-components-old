{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": [
		"**/*.ts",
		"*/**/*.json"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}