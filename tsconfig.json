{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"outDir": "out"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}